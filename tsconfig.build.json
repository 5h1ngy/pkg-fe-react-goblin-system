{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./dist"
    ],
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "jsxImportSource": "react",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "react-goblin-system": [
        "./src/index.ts"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}