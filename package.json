{
  "name": "pkg-fe-react-goblin-system",
  "version": "2.1.0",
  "license": "MIT",
  "description": "Boutique React component kit and theme extracted from the portfolio experience.",
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "best-practices",
    "modular",
    "storybook",
    "testing",
    "docs",
    "vite",
    "docusaurus"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/5h1ngy/pkg-fe-react-goblin-system.git"
  },
  "author": "5h1ngy",
  "engines": {
    "node": ">=20.18.0"
  },
  "workspaces": [
    "docs"
  ],
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/types/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.mjs",
      "types": "./dist/types/components/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.mjs",
      "types": "./dist/types/components/*.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.mjs",
      "types": "./dist/types/styles/index.d.ts"
    },
    "./styles/*": {
      "import": "./dist/styles/*.mjs",
      "types": "./dist/types/styles/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "start:storybook": "storybook dev --no-open",
    "start:docs": "yarn workspace react-goblin-system-docs docusaurus start",
    "build:storybook": "storybook build --output-dir build-storybook",
    "build:docs": "yarn workspace react-goblin-system-docs docusaurus build && rm -rf build-docusaurus && mv docs/build build-docusaurus && rm -rf docs/build",
    "build:lib": "vite build --config vite.config.lib.ts --mode prod && tsc --project tsconfig.types.json && npm pack && mkdir build-lib/ && mv *.tgz build-lib/ && rm -rfdv dist/",
    "reset": "rm -rfdv .yarn node_modules dist build-docusaurus build-storybook build-lib docs/node_modules docs/.docusaurus",
    "clean": "rm -rfdv dist build-docusaurus build-storybook build-lib"
  },
  "dependencies": {
    "styled-components": "^6.1.8"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@eslint/js": "^9.22.0",
    "@storybook/addon-docs": "^8.6.4",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-links": "^8.6.4",
    "@storybook/addon-onboarding": "^8.6.4",
    "@storybook/addon-themes": "^8.6.4",
    "@storybook/blocks": "^8.6.4",
    "@storybook/builder-vite": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-react": "^4.2.1",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.6.4",
    "styled-components": "^6.1.8",
    "typescript": "^5.4.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^5.1.5",
    "vite-plugin-dts": "^4.5.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@4.8.1"
}
