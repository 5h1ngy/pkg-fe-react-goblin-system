{
  "name": "pkg-fe-react-goblin-system",
  "version": "2.1.0",
  "license": "MIT",
  "description": "Boutique React component kit and theme extracted from the portfolio experience.",
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "best-practices",
    "modular",
    "storybook",
    "testing",
    "docs",
    "vite",
    "docusaurus"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/5h1ngy/pkg-fe-react-goblin-system.git"
  },
  "author": "5h1ngy",
  "engines": {
    "node": ">=20.18.0"
  },
  "private": true,
  "exports": {
    ".": {
      "import": "./dist/lib/index.mjs",
      "types": "./dist/lib/types/index.d.ts"
    },
    "./components": {
      "import": "./dist/lib/components/index.mjs",
      "types": "./dist/lib/types/components/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/lib/components/*.mjs",
      "types": "./dist/lib/types/components/*.d.ts"
    },
    "./system": {
      "import": "./dist/lib/system/index.mjs",
      "types": "./dist/lib/types/system/index.d.ts"
    },
    "./system/*": {
      "import": "./dist/lib/system/*.mjs",
      "types": "./dist/lib/types/system/*.d.ts"
    }
  },
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "lint": "eslint \"{packages,.docs,.story}/**/*.{ts,tsx,js,jsx,mjs,cjs}\" --max-warnings=0",
    "lint:fix": "eslint \"{packages,.docs,.story}/**/*.{ts,tsx,js,jsx,mjs,cjs}\" --fix",
    "format": "prettier --write \"{packages,.docs,.story}/**/*.{ts,tsx,js,jsx,mjs,cjs,json,md}\"",
    "format:check": "prettier --check \"{packages,.docs,.story}/**/*.{ts,tsx,js,jsx,mjs,cjs,json,md}\"",
    "storybook:dev": "storybook dev --config-dir .story --port 6006 --no-open --ci",
    "storybook:build": "storybook build --config-dir .story --output-dir dist/storybook",
    "lib:build": "vite build --config vite.config.lib.ts && tsc --project tsconfig.types.json && npm pack --pack-destination dist/lib",
    "docs:dev": "docusaurus start .docs --no-open",
    "docs:build": "docusaurus build .docs --out-dir dist/docs && npm run copy:storybook",
    "docs:serve": "docusaurus serve .docs --dir dist/docs",
    "build": "npm run lib:build && npm run storybook:build && npm run docs:build",
    "copy:storybook": "shx test -d dist/storybook && rimraf dist/docs/storybook && cpy \"**/*\" \"../docs/storybook\" --cwd=dist/storybook || shx echo \"[copy:storybook] dist/storybook not found; skipping\"",
    "workspace:clean": "rimraf dist",
    "workspace:reset": "rimraf node_modules dist .docs/.docusaurus .docs/dist"
  },
  "dependencies": {
    "@docusaurus/core": "^3.0.0",
    "@docusaurus/preset-classic": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "styled-components": "^6.1.8"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@docusaurus/module-type-aliases": "^3.0.0",
    "@docusaurus/tsconfig": "^3.0.0",
    "@docusaurus/types": "^3.0.0",
    "@eslint/js": "^9.22.0",
    "cpy-cli": "^5.0.0",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-onboarding": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.8.0",
    "prettier": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.6.4",
    "styled-components": "^6.1.8",
    "typescript": "^5.4.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^5.1.5",
    "vite-plugin-dts": "^4.5.3",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4"
  },
  "packageManager": "npm@10.8.2"
}

